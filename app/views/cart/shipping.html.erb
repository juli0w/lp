<div class="content-module-heading cf">

  <h3 class="fl">Dados de entrega</h3>
  <span class="fr expand-collapse-text"></span>
  <span class="fr expand-collapse-text initial-expand"></span>

</div> <!-- end content-module-heading -->


<div class="content-module-main cf">

  <%= simple_form_for @purchase, url: cart_purchase_path, method: :post do |f| %>

    <fieldset>

      <p>
        <%= f.label :name %>
        <%= f.text_field :name, class: "round full-width-input", autofocus: true %>
      </p>

      <span class="cf">
        <p class="fl">
          <%= f.label :phone %>
          <%= f.text_field :phone, class: "round default-width-input" %>
        </p>

        <p class="fl" style="margin-left: 20px">
          <%= f.label :cellphone %>
          <%= f.text_field :cellphone, class: "round default-width-input" %>
        </p>
      </span>

      <p>
        <%= f.label :cep %>
       <%= f.text_field :cep, class: "round default-width-input" %>
      </p>

      <span class="cf">
        <p class="fl">
          <%= f.label :city %>
         <%= f.text_field :city, class: "round default-width-input" %>
        </p>

        <p class="fl" style="margin-left: 20px">
          <%= f.label :uf %>
          <%= f.text_field :uf, class: "round", style: "width: 50px;" %>
        </p>
      </span>

      <p>
        <%= f.label :district %>
        <%= f.text_field :district, class: "round default-width-input" %>
      </p>

      <span class="cf">

        <p class="fl">
          <%= f.label :address %>
         <%= f.text_field :address, class: "round default-width-input" %>
        </p>

        <p class="fl" style="margin-left: 20px">
          <%= f.label :number %>
         <%= f.text_field :number, class: "round", style: "width: 50px;" %>
        </p>

      </span>

      <p>
        <%= f.label :complement %>
        <%= f.text_field :complement, class: "round full-width-input" %>
      </p>

      <div class="stripe-separator"><!--  --></div>
      
      <span class="cf">
        <%= link_to "Voltar para o carrinho", cart_index_path, class: "button fl round blue image-left ic-left-arrow" %>
        <%= f.submit "Confirmar dados", class: "button round text-upper green fr image-right ic-right-arrow" %>
      </span>  
    </fieldset>


  <% end %>

</div>