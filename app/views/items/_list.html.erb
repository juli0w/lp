<%= render "items/filter" %>

<div class="product-listing">
  <% @items.in_groups_of(4, false).each do |row| %>
    <div class="row">

      <% row.each do |item| %>

        <div class="product three columns" id="product-<%= item.id %>">
          <div class="product-image">
            <%= link_to ( 
                image_tag get_image(item.image.thumb), width: 100, height: 100
              ), item
            %>
          </div>

          <div class="product-details">
            <%= item.name %>
          </div>

          <div class="product-actions">
            <span class="price left">
              <small>a partir de</small><br />
              <%= monetize item.price %>
            </span>
            <%= link_to "Comprar", item, class: "btn right btn-carrinho", 'data-hint'=>"Bounce" %>
          </div>
        </div>

      <% end %>

    </div>

    <div class="hr"></div>
  <% end %>
</div>

<%= paginate @items %>